rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // 1. USERS: Allow all auth users to read (directory), only owner can write
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();

      // Allow access to settings subcollection
      match /settings/{settingId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // 2. TASKS: Student sees their own, Teacher sees tasks where they are the teacher
    match /tasks/{taskId} {
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        resource.data.teacherId == request.auth.uid
      );
      // Create: Allow if auth (we validate fields in code/backend logic usually)
      allow create: if isAuthenticated();
      // Update: Teacher or Student (status updates)
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        resource.data.teacherId == request.auth.uid
      );
      allow delete: if isAuthenticated() && resource.data.teacherId == request.auth.uid;
    }
    
    // Quick Fix for other collections to ensure app works (Refine later):
    match /circles/{circleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Should be restricted to teacher/admin in production
    }
    match /circleMembers/{memberId} {
      allow read, write: if isAuthenticated();
    }
    match /logs/{logId} {
      allow read, write: if isAuthenticated();
    }
    match /approvals/{approvalId} {
      allow read, write: if isAuthenticated();
    }
    
    // ✅ FIX: Allow Access to Memberships (for Leaderboard)
    match /memberships/{membershipId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    // Messaging Rules
    match /threads/{threadId} {
      // Allow read if user is authenticated (needed for existence checks)
      // The data itself is protected because only participants are in the thread
      allow read: if isAuthenticated() && (
        // Allow if document doesn't exist (for existence checks) 
        // OR if user is a participant
        !exists(/databases/$(database)/documents/threads/$(threadId)) ||
        request.auth.uid in resource.data.participants
      );
      // Allow listing threads where user is a participant
      allow list: if isAuthenticated();
      // Allow create if user is in the new participants list
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      // Allow update/delete if user is already a participant
      allow update, delete: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        // Allow read/write if user is a participant of the parent thread
        allow read, write: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants;
      }
      match /members/{memberId} {
         allow read, write: if isAuthenticated();
      }
    }

    // ✅ FIX: Allow Access to Attendance
    match /attendance/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // ✅ FIX: Allow Access to Excuses
    match /excuses/{excuseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Teacher Invites - Allow authenticated read for validation, write restricted
    match /teacherInvites/{code} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
